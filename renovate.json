{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices",
    ":disableRateLimiting",
    ":disablePrControls",
    ":automergeAll",
    ":automergePr",
    "helpers:pinGitHubActionDigests"
  ],
  "automergeStrategy": "squash",
  "assignAutomerge": true,
  "kubernetes": {
    "fileMatch": [
      "\\.yaml$"
    ]
  }
}
